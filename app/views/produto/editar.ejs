<%- contentFor('body') %>
<h1>Editar Produto</h1>

<div class="panel panel-success">
  <div class="panel-heading"><h3>Editar Produto</h3></div>
  <div class="panel-body">
  <form  method="POST">
      <input type="hidden" name="id" value="<%=produto._id%>"/>
    <div class="form-group">
      <input class="form-control" type="text" name="nome" value="<%=produto.nome%>" placeholder="Nome"/>
    </div>
    <div class="form-group">
      <input class="form-control" type="text" name="preco_base" value="<%=produto.preco_base%>" placeholder="Valor Base" />
    </div>

    <input class="form-control" type="hidden" name="preco" value="<%=produto.preco%>"/>

    <button type="submit" class="btn btn-default">Adicionar</button>
    <button type="reset" class="btn btn-default">Limpar Campos</button>
  </form>
</div>
</div>
