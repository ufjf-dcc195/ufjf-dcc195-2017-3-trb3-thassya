<%- contentFor('body') %>

<div class="panel panel-success">
  <div class="panel-heading"><h3>Listar Clientes</h3>

  </div>
  <div class="panel-body">
    <div class="well well-sm">
      <a method="get" href="/novoCliente.html" class="btn btn-default">Novo Cliente</a>
    </div>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
           <th scope="col">Nome:</th>
           <th scope="col">Email:</th>
           <th></th>
           <th></th>
        </tr>
      </thead>
      <tbody>
        <%
        for (var i in clientes){
          var cliente = clientes[i];
        %>
        <tr>
          <td><%=cliente.nome%></td>
          <td><%=cliente.email%></td>
          <td><a method="GET" href="/login.html?id=<%=cliente._id%>">Login</a></td>
          <td><a method="GET" href="/excluirCliente.html?id=<%=cliente._id%>">Excluir</a></td>
         </tr>
         <% } %>
       </tbody>
      </table>
  </div>
</div>
